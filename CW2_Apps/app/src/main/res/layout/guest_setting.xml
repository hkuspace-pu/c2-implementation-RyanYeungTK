<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.CW2Apps.Toolbar.Purple">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/setting"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationContentDescription="Back" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Light panel like Figma card -->
        <LinearLayout
            android:id="@+id/panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_panel_light"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvAccountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ryan Yeung"
                    android:textColor="#111111"
                    android:textSize="16sp"/>

                </LinearLayout>

                <!-- Account -->
                <TextView
                    android:id="@+id/tvAccountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textColor="#111111"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvAccountValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ryan@example.com"
                    android:textColor="#777777"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>
            <TextView
                android:id="@+id/tvPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Password"
                android:textColor="#111111"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:id="@+id/rowEditPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Notification Preferences -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvNotifyLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Notification Preferences"
                            android:textColor="#111111"
                            android:textSize="16sp"
                            android:layout_marginEnd="12dp"/>

                        <Spinner
                            android:id="@+id/spinnerNotify"
                            android:layout_width="160dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_capsule_outline_light"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

</LinearLayout>
</LinearLayout>