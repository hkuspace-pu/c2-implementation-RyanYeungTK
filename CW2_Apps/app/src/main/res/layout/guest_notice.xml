<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/notice"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationContentDescription="Back" />
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_card_light"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvNotice1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed Booking : 2025/11/19 18:00"
                android:textColor="#111111"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNotice1People"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2 People"
                android:textColor="#5F5F5F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNotice1Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sha Tin"
                android:textColor="#5F5F5F"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_light"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvNotice2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edited Booking : 2025/11/30 13:30"
                android:textColor="#111111"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNotice2People"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="3 People"
                android:textColor="#5F5F5F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNotice2Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mong Kok"
                android:textColor="#5F5F5F"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>