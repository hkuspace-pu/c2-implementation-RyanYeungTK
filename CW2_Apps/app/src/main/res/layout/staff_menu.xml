<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/menu"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationContentDescription="Back" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Search"
            android:background="@drawable/search_box"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- === Pasta Card === -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_tile"
                android:padding="10dp"
                android:layout_marginEnd="8dp">

                <!-- 圖片容器 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp">

                    <ImageView
                        android:id="@+id/imgPasta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/pasta"
                        android:textColor="#111111"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tvPastaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tomato Pasta"
                    android:textColor="#5F5F5F"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvPastaPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$120"
                    android:textColor="#5F5F5F"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_tile"
                android:padding="10dp"
                android:layout_marginStart="8dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp">

                    <ImageView
                        android:id="@+id/imgPizza"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/pizza"
                        tools:src="@drawable/pizza"
                        android:layout_marginTop="8dp"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tvPizzaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cheese Pizza"
                    android:textColor="#5F5F5F"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvPizzaPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$250"
                    android:textColor="#5F5F5F"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_tile"
                android:padding="10dp"
                android:layout_marginEnd="8dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp">

                    <ImageView
                        android:id="@+id/imgSalad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/salad"
                        tools:src="@drawable/salad"
                        android:layout_marginTop="8dp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvSaladName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caesar Salad"
                    android:textColor="#5F5F5F"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvSaladPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$80"
                    android:textColor="#5F5F5F"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
